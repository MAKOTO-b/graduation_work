  <header class="header sticky-top py-2" id="header">
    <div class="header-container">
      <div class="container-small">
          <h1>Spill Out</h1>
        <button type="button" class="headC">
          <span class="fa fa-bars" title="MEMU"></span><span class="sr-only">MEMU</span>
        </button>
      </div>
      <nav class="headB">
        <% if user_signed_in? %>
        <ul>
          <li>
            <%= link_to home_index_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="home-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span class="clickable">ホーム</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_grumble_path,class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="newspaper-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span class="clickable">投稿</span>
            <% end %>
          </li>
          <li>
            <%= link_to grumbles_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="library-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span class="clickable">投稿一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to matching_index_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="chatbox-ellipses-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span class="clickable">チャット</span>
            <% end %>
          </li>
          <li>
            <%= link_to bot_messages_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="phone-portrait-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span class="clickable">ボット</span>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user), class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="person-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span class="clickable">プロフィール</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="exit-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span >ログアウト</span>
            <% end %>
          </li>
        </ul>
        <% else %>
        <ul>
          <li>
            <%= link_to home_index_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="home-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span >ホーム</span>
            <% end %>
          </li>
          <li>
            <%= link_to grumbles_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="library-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span >投稿一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="enter-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span >ログイン</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "nav-link d-flex flex-column align-items-center",style: "color: #fff;" do %>
            <ion-icon name="checkmark-outline" class="d-none d-lg-inline" style="width: 20px; height: 20px;"></ion-icon>
            <span >新規登録</span>
            <% end %>
          </li>
        </ul>
        <% end %>
      </nav>
    </div>
  </header>
  <script>
    $(function () {
      $(".headC").click(function () {
        $(".headB").slideToggle();
      });
    });
  </script>