<div class="sign-in-page" style="margin-top: 200px;">
  <div class="card">
    <div class="card-header">
      ログインする
    </div>

    <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group pb-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group pb-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>

        <%= button_tag(type: 'submit', class: "btn btn-primary", style: "width: 325px;") do %>
          ログイン
        <% end %>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
