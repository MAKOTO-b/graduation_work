<div class="container d-flex justify-content-center align-items-center" style="padding-top: 40px;">
  <div class="card shadow p-4" style="width: 100%; max-width: 600px;">
    <h2 class="text-center mb-4">ログイン</h2>

    <!-- Google ログインボタン -->
<div class="text-center mb-3">
  <%= button_to user_google_oauth2_omniauth_authorize_path,
        data: { turbo: false },
        class: "btn btn-white d-flex justify-content-center align-items-center gap-2 mx-auto",
        style: "width: 220px; font-size: 14px; border: 1px solid #000000;" do %>
    <%= image_tag("google_logo.png", alt: "Google", width: 20, height: 20) %>
    <span>Sign in with Google</span>
  <% end %>
</div>

    <div class="text-center mb-3 text-muted">or</div>

    <!-- メールログインフォーム -->
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
        <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label", for: "rememberMe" %>
      </div>

      <%= f.submit "ログイン", class: "w-100" %>
    <% end %>

    <div class="text-left mt-3">
      <%= render "devise/shared/links" %>
  </div>
</div>
</div>
