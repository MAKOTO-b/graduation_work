<div class="sign_up_page text-center" style="margin-top: 200px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group" style="margin: 20px;">
        <%= f.text_field :name, class: "", placeholder: "ユーザーネーム" %>
      </div>

      <div class="form-group" style="margin: 20px;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "", placeholder: "メールアドレス" %>
      </div>

      <div class="form-group" style="margin: 20px;">
        <%= f.password_field :password, autocomplete: "new-password", class: "", placeholder: "パスワード" %>
      </div>

      <div class="form-group" style="margin: 20px;">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "", placeholder: "パスワード確認" %>
      </div>

      <div class="actions" style="margin: 20px;">
        <%= f.submit "はじめる", class: "btn btn-primary"%>
      </div>
  <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
</div>
