<div class="container d-flex justify-content-center align-items-center" style="padding-top: 40px;">
  <div class="card shadow p-4" style="width: 100%; max-width: 600px;">
    <h2 class="text-center mb-4">アカウント作成</h2>

    <!-- Google ログインボタン -->
    <div class="text-center mb-3">
      <%= link_to user_google_oauth2_omniauth_authorize_path,
              class: "btn btn-outline-dark d-flex justify-content-center align-items-center gap-2 mx-auto",
              style: "width: 220px; font-size: 14px;" do %>
        <img src="https://developers.google.com/identity/images/g-logo.png"
             alt="Google Logo"
             style="height: 18px;">
        <span>Sign in with Google</span>
      <% end %>
    </div>
    <div class="text-center mb-3 text-muted">or</div>

      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-0">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-0">
          <%= f.label :name, "ユーザーネーム", class: "form-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="mb-0">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mb-2">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation,  autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <%= f.submit "登録", class: "w-100" %>
      <% end %>

      <div class="mb-0">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
