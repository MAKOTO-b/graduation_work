<div class="sign_up_page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group w-25 p-3">
      <%= f.text_field :name, class: "form-control", placeholder: "ユーザーネーム" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
    </div>

    <div class="form-group w-25 p-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認" %>
    </div>

    <div class="actions">
      <%= f.submit "はじめる" %>
    </div>
  <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
</div>
