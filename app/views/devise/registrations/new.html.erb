<div class="sign-up-page" style="margin-top: 200px;">
  <div class="card">
    <div class="card-header">
      アカウントを作成する
    </div>

    <div class="card-body ">
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group pb-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group pb-2">
          <%= f.text_field :name, class: "form-control", placeholder: "ユーザーネーム" %>
        </div>

        <div class="form-group pb-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="form-group pb-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認" %>
        </div>

        <div class="sign-up__submit-btn text-center">
          <%= f.submit "はじめる", class: "btn btn-block text-white" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
