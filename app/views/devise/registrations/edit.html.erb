<div class="container d-flex justify-content-center" style="padding-top: 80px;">
  <div class="card shadow-sm p-4 w-100" style="max-width: 600px;">
    <h2 class="text-center mb-4">プロフィールを編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul class="list-unstyled  mb-0">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 名前 -->
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <!-- メール -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <!-- プロフィール画像 -->
      <div class="mb-3">
        <%= f.label :profile_image, "プロフィール画像", class: "form-label" %>
        <%= f.file_field :profile_image, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "更新する", class: "btn btn-dark px-4 py-2" %>
      </div>
    <% end %>
</div>
</div>
<div class="text-center mt-4">
  <%= link_to "プロフィール画面へ戻る", user_path(current_user), class: "btn btn-dark" %>
</div>
